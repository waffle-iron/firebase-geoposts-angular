{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [{
      "source": "**",
      "destination": "/index.html"
    }],
    "ignore": [
      "firebase.json",
      "tsconfig.json",
      "tslint.json",
      "**/.*",
      "**/node_modules/**",
      "**/src/**"
    ]
  }
}
