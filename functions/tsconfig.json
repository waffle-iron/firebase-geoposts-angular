{
  "compileOnSave": true,
  "exclude": [
    "**/node_modules/*"
  ],
  "include": [
    "**/src/*"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
